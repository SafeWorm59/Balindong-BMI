<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Calculator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your weight (kg)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/titleText"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="165dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="80"
        android:layout_below="@id/titleText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your height (m)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textView"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/heightInput"
        android:layout_width="165dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="1.80"
        android:layout_below="@id/weightInput"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate my BMI!"
        android:layout_below="@id/heightInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your BMI:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/BMIResult"
        android:layout_width="165dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="......."
        android:layout_below="@id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/BMICategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI category"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/BMIResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
